---
import '@/styles/global.css'

import type { AstroInstance } from 'astro'
import type { StoryMeta } from '@/types'

import Catalog from '@/components/Catalog.vue'
import ThemeSwitcher from '@/components/ThemeSwitcher.vue'

interface Props {
  title?: string
}

const { title } = Astro.props

const stories = Object.entries<AstroInstance & { meta: StoryMeta }>(
  import.meta.glob('../pages/*.astro', { eager: true })
)
  .filter(([_, instance]) => Object.hasOwn(instance, 'meta'))
  .map(([_, { url, meta }]) => ({ url: url!, meta }))
---

<html lang=''>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width' />
    <!-- <link rel='icon' type='image/svg+xml' href='/favicon.svg' /> -->
    <title>{title}</title>
  </head>
  <body class='bg-sur w-screen h-screen overflow-y-auto text-on-sur text-sm/normal'>
    <header
      class='pointer-events-none fixed top-0 inset-x-0 *:pointer-events-auto h-15 flex gap-3 items-center px-3'
    >
      <Catalog client:only stories={stories} />
      <ThemeSwitcher client:only />
    </header>
    <main class='size-full flex items-center justify-center'>
      <slot />
    </main>
  </body>
</html>
