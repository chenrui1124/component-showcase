---
import type { StoryMeta } from '@/types'

import ComponentLayout from '@/layouts/ComponentLayout.astro'
import VueCycleButton from '@/stories/VueCycleButton.vue'
import code from '@/stories/VueCycleButton.vue?raw'
import { Framework } from '@/types'
import ResizeShowcase from '@/components/ResizeShowcase.astro'

export const meta: StoryMeta = {
  name: 'Cycle Button',
  framework: Framework.Vue,
}
---

<ComponentLayout subtitle={meta.name} code={code}>
  <ResizeShowcase width='45' height='60' class:list='flex items-end'>
    <VueCycleButton client:only />
  </ResizeShowcase>
</ComponentLayout>
